{
    "name": "thesynergygroup/money-quiz",
    "description": "Enhanced Money Quiz plugin with comprehensive safety features and modern architecture",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "The Synergy Group AG",
            "email": "Andre@thesynergygroup.ch",
            "homepage": "https://thesynergygroup.ch"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "mockery/mockery": "^1.5",
        "brain/monkey": "^2.6",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MoneyQuiz\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MoneyQuiz\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=unit",
        "test:integration": "phpunit --testsuite=integration",
        "test:security": "phpunit --testsuite=security",
        "test:coverage": "phpunit --coverage-html coverage --coverage-text",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse",
        "lint": ["@phpcs", "@phpstan"],
        "fix": "phpcbf",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true,
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "extra": {
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
        }
    }
}